#!/usr/bin/python3

import sh

def get_sessions():
    try:
        sessions_output = sh.tmux('list-sessions')
        sessions = [s.split(' ')[0][:-1] for s in sessions_output]
        return sessions
    except sh.ErrorReturnCode_1:
        return []

# setup Main

if 'Main' in get_sessions():
    print('Main exisis')
else:
    print('Creating Main Session')
    sh.tmux('new-session',
            '-d',
            '-c', '/home/julian/projects',
            '-n', 'main',
            '-s', 'Main')
    sh.tmux('send', "ll\n")

